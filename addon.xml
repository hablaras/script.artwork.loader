<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.artwork.loader" name="Artwork Loader" version="1.1.0" provider-name="hablaras">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
		<import addon="xbmc.json" version="6.0.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
	</requires>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Adds artwork for movies</summary>
		<description lang="en">Adds artwork for movies 
		The artwork file has to be next to the movie file in the same folder, e.g. "c:\movies\antman.mp4" should have "c:\movies\antman-logo.png"</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum></forum>
		<source>https://github.com/hablaras/script.artwork.loader</source>
		<email>hab@laras.org</email>
	</extension>
</addon>